<UserControl
    x:Class="aincradSaveModifier.MVVM.View.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:aincradSaveModifier.MVVM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            Margin="0,0,0,20"
            HorizontalAlignment="Left"
            FontSize="28"
            Foreground="White"
            Text="Login" />
        <StackPanel Orientation="Horizontal">
            <Border
                Width="375"
                Height="200"
                Margin="5,5,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 2">
                        <GradientStop Offset="0.0" Color="#5bc3ff" />
                        <GradientStop Offset="1" Color="#3aa0ff" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry
                        RadiusX="10"
                        RadiusY="10"
                        Rect="0, 0, 375, 200" />
                </Border.Clip>
                <Grid>
                    <StackPanel>
                        <TextBlock
                            Margin="20,10,10,0"
                            FontSize="28"
                            Foreground="White"
                            Text="UserName" />
                        <TextBox
                            Name="userName"
                            Margin="20,10,10,0"
                            FontSize="18"
                            Foreground="Black"
                            Text="" />
                    </StackPanel>
                </Grid>
            </Border>
            <Border
                Width="375"
                Height="200"
                Margin="5,5,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0, 0" EndPoint="1, 2">
                        <GradientStop Offset="0.0" Color="#5bc3ff" />
                        <GradientStop Offset="1" Color="#3aa0ff" />
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Clip>
                    <RectangleGeometry
                        RadiusX="10"
                        RadiusY="10"
                        Rect="0, 0, 375, 200" />
                </Border.Clip>
                <Grid>
                    <StackPanel>
                        <TextBlock
                            Margin="20,10,10,0"
                            FontSize="28"
                            Foreground="White"
                            Text="Password" />
                        <PasswordBox
                            Name="Password"
                            Margin="20,10,10,0"
                            FontSize="18"
                            Foreground="Black" />
                    </StackPanel>
                </Grid>
            </Border>

        </StackPanel>
        <Grid Height="188">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border
                Width="100"
                Height="70"
                HorizontalAlignment="Left"
                CornerRadius="20">
                <Button
                    Name="LoginButton"
                    Width="100"
                    Height="70"
                    Background="#1fa8d1"
                    Click="LoginUser"
                    Content="Login"
                    FontSize="30" />
            </Border>
            <StackPanel Margin="150,0,0,0" Orientation="Horizontal">
                <TextBlock
                    Name="AuthMessage"
                    Width="150"
                    Height="50"
                    Margin="0,25,0,0"
                    FontFamily="/Fonts/#SAO UI TT"
                    FontSize="26"
                    Foreground="White"
                    Text="Enter 2FA Code"
                    TextAlignment="Center"
                    Visibility="Collapsed" />
                <Border
                    Width="200"
                    Height="40"
                    Background="#333540"
                    CornerRadius="10">
                    <Grid>
                        <Rectangle StrokeThickness="1" />
                        <TextBox
                            x:Name="AuthBox"
                            Margin="1"
                            Padding="5"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="#CFCFCF" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            HorizontalAlignment="left"
                            VerticalAlignment="Center"
                            FontSize="11"
                            Foreground="DarkGray"
                            IsHitTestVisible="False"
                            Text="ApiKey" />
                    </Grid>
                </Border>
            </StackPanel>


            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Text="Status: " />
                <TextBlock
                    Name="Status"
                    VerticalAlignment="Center"
                    FontSize="40"
                    Foreground="White"
                    Text="not loged in " />
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>
